@model MyBlog.Models.ArticleDetailViewModel

@section Header{
    <header class="masthead" style="background-image: url('../../Content/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>@Html.DisplayFor(model => model.Subject)</h1>
                        <span class="meta">
                            Posted by
                            <a href="#">@Html.DisplayFor(model => model.CreateUser)</a>
                            on @Html.DisplayFor(model => model.CreateDate)
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>
}
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.ContentText)
            </div>
        </div>
    </div>
</article>